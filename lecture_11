
--1
CREATE TABLE Books (
    book_id INT PRIMARY KEY,
    title VARCHAR(255),
    publisher_id INT,
    publisher_name VARCHAR(255),
    publisher_city VARCHAR(100),
    FOREIGN KEY (publisher_id) REFERENCES publishers(publisher_id)
);

CREATE TABLE publishers (
    publisher_id SERIAL PRIMARY KEY,
    full_name VARCHAR(255)
);

--2

CREATE TABLE race(
    race_id SERIAL PRIMARY KEY,
    number_race INT
);

CREATE TABLE drivers (
    driver_id SERIAL PRIMARY KEY,
    full_name VARCHAR(255)
);

CREATE TABLE car_models (
    car_model_id SERIAL PRIMARY KEY,
    manufacturer VARCHAR(100),
    model_name VARCHAR(255)
);

CREATE TABLE RaceResults (
    RaceResult_id SERIAL PRIMARY KEY,
    race_id INT,
    driver_id INT,
    car_model_id INT,
    finish_time TIME,
    FOREIGN KEY (race_id) REFERENCES race(race_id),
    FOREIGN KEY (driver_id) REFERENCES drivers(driver_id),
    FOREIGN KEY (car_model_id) REFERENCES car_models(car_model_id)
);


--3

CREATE TABLE event_types(
    event_type_id SERIAL PRIMARY KEY,
    name_type VARCHAR(255)
);

CREATE TABLE event_names(
    event_name_id SERIAL PRIMARY KEY,
    event_name VARCHAR(255)
);

CREATE TABLE booking_times(
    booking_time_id SERIAL PRIMARY KEY,
    booking_time TIME
);

CREATE TABLE rooms(
    room_id SERIAL PRIMARY KEY,
    room_name VARCHAR(255)
);

CREATE TABLE booking_time_rooms(
    booking_time_rooms_id SERIAL PRIMARY KEY,
    booking_time_id INT,
    room_id INT,
    FOREIGN KEY (room_id) REFERENCES ROOMS(room_id),
    FOREIGN KEY (booking_time_id) REFERENCES booking_times(booking_time_id),
    UNIQUE (booking_time_id,room_id)
);

CREATE TABLE event_type_name(
    event_type_name_id SERIAL PRIMARY KEY,
    event_type_id INT,
    event_name_id INT,
    FOREIGN KEY (event_type_id) REFERENCES event_types(event_type_id),
    FOREIGN KEY (event_name_id) REFERENCES event_names(event_name_id),
    UNIQUE (event_type_id, event_name_id)
);

CREATE TABLE event_type_rooms(
    event_type_rooms_id SERIAL PRIMARY KEY,
    event_type_id INT,
    room_id INT,
    FOREIGN KEY (event_type_id) REFERENCES event_types(event_type_id),
    FOREIGN KEY (room_id) REFERENCES rooms(room_id),
    UNIQUE (event_type_id,room_id)
);



