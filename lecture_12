CREATE TABLE products (
    product_id INT PRIMARY KEY,
    name VARCHAR(255) NOT NULL,
    quantity INT NOT NULL CHECK (quantity >= 0) -- Количество на складе
);

CREATE TABLE order_history (
    log_id SERIAL PRIMARY KEY,
    product_id INT,
    quantity_changed INT,
    notes VARCHAR(255),
    created_at TIMESTAMP WITH TIME ZONE DEFAULT CURRENT_TIMESTAMP
);

INSERT INTO products (product_id, name, quantity) VALUES
(1, 'Ноутбук', 20),
(2, 'Смартфон', 50);

--1
BEGIN;

UPDATE products SET quantity = quantity - 5 WHERE product_id = 1 AND name = 'Ноутбук';

INSERT INTO order_history (product_id, quantity_changed, notes) 
VALUES (1, -5, 'Продажа 5 ноутбуков');

COMMIT;


SELECT * FROM products;

SELECT * FROM order_history;

--2


BEGIN;


UPDATE products SET quantity = quantity - 100 WHERE product_id = 2 AND name = 'Смартфон';


INSERT INTO order_history (product_id, quantity_changed, notes) 
VALUES (2, -100, 'Продажа 100 смартфонов');


COMMIT;

SELECT 'products table:' as table_name;
SELECT * FROM products;

SELECT 'order_history table:' as table_name;
SELECT * FROM order_history;

--3


BEGIN;


UPDATE products SET quantity = quantity - 2 WHERE product_id = 1 AND name = 'Ноутбук';

ROLLBACK;

SELECT * FROM products WHERE product_id = 1;


